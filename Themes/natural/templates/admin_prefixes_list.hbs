		{{! Managing prefixes. }}
		<div class="cat_bar">
			<h3 class="catbg">{{{txt.topic_prefixes}}}</h3>
		</div>

{{#if context.prefixes}}
			<div class="buttonlist righttext">
				<a class="button" href="{{scripturl}}?action=admin;area=topicprefixes;sa=add_prefix">{{{txt.add_prefix}}}</a>
			</div>

			<form action="{{sctipturl}}?action=admin;area=topicprefixes;sa=update_order" method="post">

				<ul class="sortable ui-sortable">
	{{#each context.prefixes}}
					<li class="up_contain admin-prefix">
						<span class="draggable-handle ui-sortable-handle"></span>
						<input type="hidden" name="prefix[]" value="{{id_prefix}}">

						<div class="prefix-preview">
							<span class="{{{css_class}}} prefix-id-{{id_prefix}}">{{{name}}}</span>
						</div>

						<div class="prefix-options">
							<div class="buttonlist">
								<a href="{{../scripturl}}?action=admin;area=topicprefixes;sa=edit_prefix;prefix={{id_prefix}}" class="button">{{../txt.modify}}</a>
							</div>
						</div>
					</li>
	{{/each}}
				</ul>
				<div class="buttonlist righttext">
					<button class="button hiddenelement" name="save_order" type="submit">{{txt.save_new_order}}</button>
				</div>

				{{session_form}}
			</form>
{{else}}
			<div class="windowbg centertext">{{{txt.no_topic_prefixes}}}</div>
			<div class="buttonlist righttext">
				<a class="button" href="{{scripturl}}?action=admin;area=topicprefixes;sa=add_prefix">{{{txt.add_prefix}}}</a>
			</div>
{{/if}}