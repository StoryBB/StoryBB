	<div class="block blocktype_{{ blocktype }} block-col-{{ width }}" id="block_{{ instance }}">
		<div class="roundframe">
			<div class="title_bar block_title_container">
				<h3 class="block_title titlebg{% if icon %} main_icons {{icon}}{% endif %}">
					{% if fa_icon %}<i class="{{ fa_icon }}"></i>{% endif %}
					{% if collapsible %}
						<span class="toggle_up floatright img_toggle"></span>
						<a href="#">{{ title }}</a>
					{% else %}
						{{ title }}
					{% endif %}
				</h3>

			</div>
			<div class="block_content"{% if collapsed %} style="display:none"{% endif %}>
				{{ content|raw }}
			</div>
		</div>
	</div>