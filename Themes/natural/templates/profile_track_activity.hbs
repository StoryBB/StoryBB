	{{! The first table shows IP information about the user. }}
	<div class="cat_bar profile">
		<h3 class="catbg">{{{txt.view_ips_by}}} {{{context.member.name}}}</h3>
	</div>

	{{! The last IP the user used. }}
	<div id="tracking" class="windowbg noup">
		<dl class="settings noborder">
			<dt>{{{txt.most_recent_ip}}}:

{{#if context.last_ip2}}
				<br>
				<span class="smalltext">(<a href="{{scripturl}}?action=helpadmin;help=whytwoip" onclick="return reqOverlayDiv(this.href);">{{{txt.why_two_ip_address}}}</a>)</span>
{{/if}}

			</dt>
			<dd>
				<a href="{{scripturl}}?action=admin;area=logs;sa=ip;searchip={{{context.last_ip}}};u={{{context.member.id}}}">{{{context.last_ip}}}</a>

{{! Second address detected? }}
{{#if context.last_ip2}}
				<a href="{{scripturl}}?action=admin;area=logs;sa=ip;searchip={{{context.last_ip2}}};u={{{context.member.id}}}">{{{context.last_ip2}}}</a>
{{/if}}
			</dd>

			{{! Lists of IP addresses used in messages / error messages. }}
			<dt>{{{txt.ips_in_messages}}}:</dt>
			<dd>
				{{#if context.ips}}{{{join context.ips ', '}}}{{else}}({{{txt.none}}}){{/if}}
			</dd>
			<dt>{{{txt.ips_in_errors}}}:</dt>
			<dd>
				{{#if context.error_ips}}{{{join context.error_ips ', '}}}{{else}}({{{txt.none}}}){{/if}}
			</dd>

			{{! List any members that have used the same IP addresses as the current member. }}
			<dt>{{{txt.members_in_range}}}:</dt>
			<dd>
				{{#if context.members_in_range}}{{{join context.members_in_range ', '}}}{{else}}({{{txt.none}}}){{/if}}
			</dd>
		</dl>
	</div>

	{{! Show the track user list. }}
	{{genericlist 'track_user_list'}}