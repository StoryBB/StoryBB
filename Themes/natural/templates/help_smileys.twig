{% extends '@layouts/default.twig' %}

{% block title %}{{ phrase('Manual:manual_smileys') }}{% endblock %}

{% block content %}
	<x-panel class="help_container">
		<x-panel.heading>{{ phrase('Manual:manual_smileys') }} - {{ forum_name }}</x-panel.heading>
		<x-panel.body>
			<table>

				{% for smiley in smileys %}
				<tr>
					<td>
						<img class="smiley" src="{{ smiley.image }}" alt="{{ smiley.text|striptags }}">
					</td>
					<td>{{ smiley.text|striptags }}</td>
					<td>
						{% for code in smiley.code %}
						<span class="smiley_code">{{ code }}</span>
						{% endfor %}
					</td>
				</tr>
				{% endfor %}
			</table>
		</x-panel.body>
	</x-panel>
{% endblock %}