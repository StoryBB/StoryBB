									#}{{status_messages}}{#
									#}<aside class="main-body-content">{% block content %}{% endblock %}</aside>{#
								#}{#block_region 'below-content'#}</div>{#
							#}{#block_region 'right-sidebar'#}</div>{#
						#}{#block_region 'after-content'#}{#
					#}</div>
				</div>
			</div>
		</div><!-- #content_wrapper -->

		{% include '@partials/theme/footer.twig' %}

	</div>
	<x-cookie-footer />

	{% block js %}{% endblock %}
</body>
</html>