	{{! Setting up the new password }}
	<br>
	<form action="{{scripturl}}?action=reminder;sa=setpassword2" name="reminder_form" id="reminder_form" method="post" accept-charset="UTF-8">
		<div class="tborder login">
			<div class="cat_bar">
				<h3 class="catbg">{{{context.page_title}}}</h3>
			</div>
			<div class="roundframe">
				<dl>
					<dt>{{{txt.choose_pass}}}: </dt>
					<dd>
						<input type="password" name="passwrd1" id="sbb_autov_pwmain" size="22">
						<span id="sbb_autov_pwmain_div" style="display: none;">
							<span id="sbb_autov_pwmain_img" class="main_icons invalid"></span>
						</span>
					</dd>
					<dt>{{{txt.verify_pass}}}: </dt>
					<dd>
						<input type="password" name="passwrd2" id="sbb_autov_pwverify" size="22">
						<span id="sbb_autov_pwverify_div" style="display: none;">
							<span id="sbb_autov_pwverify_img" class="main_icons invalid"></span>
						</span>
					</dd>
				</dl>
				<p class="align_center"><input type="submit" value="{{{txt.save}}}" class="button_submit"></p>
			</div>
		</div>
		<input type="hidden" name="code" value="{{{context.code}}}">
		<input type="hidden" name="u" value="{{{context.memID}}}">
		{{session_form}}
		{{token_form 'remind-sp'}}
	</form>
	<script>
	var regTextStrings = {
		"password_short": {{{json txt.registration_password_short}}},
		"password_reserved": {{{json txt.registration_password_reserved}}},
		"password_numbercase": {{{json txt.registration_password_numbercase}}},
		"password_no_match": {{{json txt.registration_password_no_match}}},
		"password_valid": {{{json txt.registration_password_valid}}}
	};
	var verificationHandle = new sbbRegister("reminder_form", {{#if modSettings.password_strength}}{{modSettings.password_strength}}{{else}}0{{/if}}, regTextStrings);
	</script>