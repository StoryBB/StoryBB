		{{! Show the full list of alerts.}}
		<div class="cat_bar">
			<h3 class="catbg">
			{{{txt.alerts}}} - {{{context.member.name}}}
			</h3>
		</div>

{{#unless context.alerts}}
		<div class="information">
			{{{txt.alerts_none}}}
		</div>
{{else}}
		<form action="{{scripturl}}?action=profile;u={{context.id_member}};area=showalerts;save" method="post" accept-charset="UTF-8" id="mark_all">
			<table id="alerts" class="table_grid">

	{{#each context.alerts}}
				<tr class="windowbg">
					<td>{{{text}}}</td>
					<td>{{{time}}}</td>
					<td>
						<ul class="quickbuttons">
							<li><a href="{{../scripturl}}?action=profile;u={{../context.id_member}};area=showalerts;do=remove;aid={{@key}};{{session_url}}" class="you_sure"><span class="main_icons remove_button"></span>{{{../txt.delete}}}</a></li>
							<li><a href="{{../scripturl}}?action=profile;u={{../context.id_member}};area=showalerts;do={{#if (gt is_read '0')}}unread{{else}}read{{/if}};aid={{@key}};{{session_url}}" class="main_icons {{#if (gt is_read '0')}}unread_button{{else}}read_button{{/if}}">{{#if (gt is_read '0')}}{{../txt.mark_unread}}{{else}}{{../txt.mark_read_short}}{{/if}}</a></li>
							<li><input type="checkbox" name="mark[{{@key}}]" value="{{@key}}"></li>
						</ul>
					</td>
				</tr>
	{{/each}}

			</table>
			<div class="pagesection">
				<div class="floatleft">
					{{{context.pagination}}}
				</div>
				<div class="floatright">
					{{{txt.check_all}}}: <input type="checkbox" name="select_all" id="select_all">
					<select name="mark_as">
						<option value="read">{{{txt.quick_mod_markread}}}</option>
						<option value="unread">{{{txt.quick_mod_markunread}}}</option>
						<option value="remove">{{{txt.quick_mod_remove}}}</option>
					</select>
					{{session_form}}
					<input type="submit" name="req" value="{{{txt.quick_mod_go}}}" class="button_submit you_sure">
				</div>
			</div>
		</form>
{{/unless}}