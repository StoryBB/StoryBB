	{{! Shows PHP info }}
	<div id="admin_form_wrapper">
		<div id="section_header" class="cat_bar">
			<h3 class="catbg">
				{{{txt.phpinfo_settings}}}
			</h3>
		</div>

		{{#each context.pinfo}}
		<table id="{{@key}}" class="table_grid">
			<thead>
				<tr class="title_bar">
					<th class="equal_table" scope="col"></th>
					<th class="centercol equal_table" scope="col"><strong>{{{name}}}</strong></th>
					<th class="equal_table" scope="col"></th>
				</tr>
			</thead>
			<tbody>
			{{#if 2col}}
				{{#each 2col}}
				<tr class="windowbg">
					<td class="equal_table">{{@key}}</td>
					<td colspan="2">{{{.}}}</td>
				</tr>
				{{/each}}
			{{/if}}
			{{#if 3col}}
				<tr class="title_bar">
					<td class="equal_table"><strong>{{{../txt.phpinfo_itemsettings}}}</strong></td>
					<td class="equal_table"><strong>{{{../txt.phpinfo_localsettings}}}</strong></td>
					<td class="equal_table"><strong>{{{../txt.phpinfo_defaultsettings}}}</strong></td>
				</tr>
				{{#each 3col}}
				<tr class="windowbg">
					<td class="equal_table">{{@key}}</td>
					{{#each .}}
					<td class="equal_table">{{{.}}}</td>
					{{/each}}
				</tr>
				{{/each}}
			{{/if}}
			</tbody>
		</table>
		<br>
		{{/each}}
	</div>