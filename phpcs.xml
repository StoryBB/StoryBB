<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="StoryBB">
    <description>Rules for StoryBB coding standards.</description>

    <file>.</file>

    <!-- Don't include anything that comes from Composer; they don't have to follow our rules -->
    <exclude-pattern>Sources/minify/*</exclude-pattern>
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>Themes/default/scripts/select2/*</exclude-pattern>

    <!-- The cache folder is a hot mess, and not relevant. -->
    <exclude-pattern>./cache/data*</exclude-pattern>
    <exclude-pattern>./cache/template*</exclude-pattern>

    <!-- Don't include anything that we know ahead of time to be minified. -->
    <exclude-pattern>./Themes/default/css/minified.css</exclude-pattern>
    <exclude-pattern>./Themes/default/css/select2.css</exclude-pattern>
    <exclude-pattern>./Themes/default/css/select2.min.css</exclude-pattern>
    <exclude-pattern>./Themes/default/scripts/dropzone.min.js</exclude-pattern>
    <exclude-pattern>./Themes/default/scripts/jquery-3.2.1.min.js</exclude-pattern>
    <exclude-pattern>./Themes/default/scripts/jquery-ui-1.12.1-sortable.min.js</exclude-pattern>
    <exclude-pattern>./Themes/default/scripts/jquery.atwho.min.js</exclude-pattern>
    <exclude-pattern>./Themes/default/scripts/jquery.caret.min.js</exclude-pattern>
    <exclude-pattern>./Themes/default/scripts/jquery.sceditor.bbcode.min.js</exclude-pattern>
    <exclude-pattern>./Themes/default/scripts/minified.js</exclude-pattern>
    <exclude-pattern>./Themes/default/scripts/slippry.min.js</exclude-pattern>

    <rule ref="Generic.Classes.DuplicateClassName"/>
    <rule ref="Generic.CodeAnalysis.EmptyStatement"/>
    <rule ref="Generic.CodeAnalysis.ForLoopShouldBeWhileLoop"/>
    <rule ref="Generic.CodeAnalysis.ForLoopWithTestFunctionCall"/>
    <rule ref="Generic.CodeAnalysis.JumbledIncrementer"/>
    <rule ref="Generic.CodeAnalysis.UnconditionalIfStatement"/>
    <rule ref="Generic.CodeAnalysis.UnnecessaryFinalModifier"/>
    <rule ref="Generic.CodeAnalysis.UselessOverridingMethod"/>
    <!-- <rule ref="Generic.ControlStructures.InlineControlStructure"/> --><!-- Requires many, many changes to implement -->
    <rule ref="Generic.Files.ByteOrderMark"/>
    <rule ref="Generic.Formatting.DisallowMultipleStatements">
        <exclude-pattern>./other/Settings.php</exclude-pattern>
    </rule>
    <rule ref="Generic.Formatting.SpaceAfterCast"/>
    <rule ref="Generic.Functions.CallTimePassByReference"/>
    <rule ref="Generic.Functions.FunctionCallArgumentSpacing"/>
    <rule ref="Generic.Functions.OpeningFunctionBraceBsdAllman"/>
    <rule ref="Generic.NamingConventions.ConstructorName"/>
    <rule ref="Generic.NamingConventions.UpperCaseConstantName"/>
    <rule ref="Generic.PHP.DeprecatedFunctions"/>
    <rule ref="Generic.PHP.DisallowShortOpenTag"/>
    <rule ref="Generic.PHP.ForbiddenFunctions"/>
    <rule ref="Generic.PHP.LowerCaseConstant"/>
    <!-- <rule ref="Generic.Strings.UnnecessaryStringConcat">
        <properties>
            <property name="error" value="false"/>
        </properties>
    </rule> --><!-- Flags a number of issues that really aren't so problematic, done for readability... -->
    <rule ref="Generic.WhiteSpace.DisallowSpaceIndent"/>
    <rule ref="PEAR.Commenting.InlineComment"/>
    <!-- <rule ref="PSR1.Classes.ClassDeclaration"/> --><!-- Requires refactoring the top level classes into a namespace -->
    <!-- <rule ref="PSR1.Files.SideEffects"/> --><!-- Requires refactoring the image proxy -->
    <rule ref="PSR2.Classes.ClassDeclaration"/>
    <rule ref="PSR2.ControlStructures.ControlStructureSpacing"/>
    <rule ref="PSR2.ControlStructures.ElseIfDeclaration"/>
    <rule ref="PSR2.Files.EndFileNewline">
        <exclude-pattern>./Settings.php</exclude-pattern>
        <exclude-pattern>./Settings_bak.php</exclude-pattern>
    </rule>
    <rule ref="PSR2.Namespaces.NamespaceDeclaration"/>
    <rule ref="PSR2.Namespaces.UseDeclaration"/>
    <!-- <rule ref="Squiz.PHP.CommentedOutCode"/> --><!-- Has a fair number of false positives right now, not suitable for automation -->
    <rule ref="Squiz.PHP.Heredoc"/>
    <rule ref="Squiz.PHP.InnerFunctions"/>
    <rule ref="Squiz.PHP.LowercasePHPFunctions"/>
    <!-- <rule ref="Squiz.PHP.NonExecutableCode"/> --><!-- Requires quite significant refactoring -->
    <rule ref="Squiz.Scope.MemberVarScope"/>
    <rule ref="Squiz.Scope.MethodScope"/>
    <rule ref="Squiz.Scope.StaticThisUsage"/>
    <rule ref="Squiz.WhiteSpace.LanguageConstructSpacing"/>
    <rule ref="Squiz.WhiteSpace.LogicalOperatorSpacing"/>
    <rule ref="Squiz.WhiteSpace.ObjectOperatorSpacing"/>
    <rule ref="Squiz.WhiteSpace.OperatorSpacing"/>
    <rule ref="Squiz.WhiteSpace.ScopeClosingBrace"/>
    <rule ref="Squiz.WhiteSpace.ScopeKeywordSpacing"/>
    <rule ref="Squiz.WhiteSpace.SemicolonSpacing"/>
    <rule ref="Zend.Files.ClosingTag"/>
</ruleset>